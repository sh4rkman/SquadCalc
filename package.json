{
  "name": "squadcalc",
  "version": "23.3.0",
  "description": "A Complete Mortar Calculator for Squad",
  "author": "Maxime 'sharkman' Boussard",
  "license": "MIT",
  "keywords": [
    "squad",
    "squadcalc",
    "mortar",
    "calculator"
  ],
  "repository": {
    "type": "git",
    "url": "git:/github.com/sh4rkman/SquadCalc"
  },
  "homepage": "https://squadcalc.app/",
  "bugs": {
    "url": "https://github.com/sh4rkman/SquadCalc/issues"
  },
  "private": false,
  "jshintConfig": {
    "esversion": 7
  },
  "scripts": {
    "start": "webpack serve --open --config ./config/webpack.test.js",
    "build:prod": "npm-run-all build:prod2 cpdir",
    "build:dev": "npm-run-all build:dev2 cpdir",
    "build:prod2": "webpack --config ./config/webpack.prod.js",
    "build:dev2": "webpack --config ./config/webpack.dev.js",
    "mapinfo": "node src/js/tests/mapdata.js info",
    "weaponInfo": "node src/js/tests/calcMortarTech.js info",
    "test:all": "npm-run-all test:eslint test:jshint test:stylelint test:htmlhint test:w3c",
    "test:eslint": "eslint -c ./config/.eslintrc.json ./src/",
    "test:jshint": "jshint ./src/",
    "test:stylelint": "stylelint -c ./config/.stylelintrc.json ./src/css/*.scss",
    "test:htmlhint": "htmlhint --nocolor ./src/",
    "test:w3c": "html-validator --quiet --continue ./src/",
    "cpdir": "node -e \"require('fs').cpSync('./public/maps', './dist/maps', {recursive: true});\""
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@types/node": "^20.8.10",
    "animate.css": "^4.1.1",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "eslint": "^8.34.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.3",
    "htmlhint": "^1.1.4",
    "jshint": "^2.13.6",
    "leader-line-new": "^1.1.9",
    "leaflet": "^1.9.4",
    "leaflet-edgebuffer": "^1.0.6",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "postcss": ">=8.4.31",
    "purecss": "^3.0.0",
    "robotstxt-webpack-plugin": "^8.0.0",
    "sass": "^1.69.4",
    "sass-loader": "^12.6.0",
    "select2": "^4.1.0-rc.0",
    "style-loader": "^3.3.1",
    "stylelint": "^15.10.1",
    "stylelint-config-standard-scss": "^7.0.1",
    "tippy.js": "^6.3.7",
    "w3c-html-validator": "^1.3.2",
    "webpack": "^5.80.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1",
    "webpack-jquery-ui": "^2.0.1",
    "webpack-merge": "^5.8.0",
    "webpack-nano": "^1.1.1",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^7.0.0"
  }
}
